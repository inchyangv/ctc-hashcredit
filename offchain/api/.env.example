# HashCredit API Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# API Server
# ============================================================================

# Host to bind to (127.0.0.1 for local only, 0.0.0.0 for all interfaces)
HOST=127.0.0.1

# Port to listen on
PORT=8000

# Enable debug mode (auto-reload on code changes)
DEBUG=false

# ============================================================================
# Authentication
# ============================================================================

# API token for authentication (leave empty to disable auth for local use)
# Generate a strong token: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_TOKEN=

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================================================
# Bitcoin RPC
# ============================================================================

# Bitcoin Core RPC URL (testnet default port: 18332)
BITCOIN_RPC_URL=http://127.0.0.1:18332

# Bitcoin RPC credentials
BITCOIN_RPC_USER=
BITCOIN_RPC_PASSWORD=

# ============================================================================
# EVM (Creditcoin)
# ============================================================================

# Creditcoin testnet RPC URL
EVM_RPC_URL=https://rpc.cc3-testnet.creditcoin.network

# Chain ID (102031 = Creditcoin testnet)
CHAIN_ID=102031

# Private key for signing transactions (include 0x prefix)
PRIVATE_KEY=

# ============================================================================
# Contract Addresses (Creditcoin Testnet)
# ============================================================================

# HashCreditManager contract address
HASH_CREDIT_MANAGER=

# CheckpointManager contract address
CHECKPOINT_MANAGER=

# BtcSpvVerifier contract address
BTC_SPV_VERIFIER=
