# HashCredit Environment Configuration
# Copy this file to .env and fill in the values

# ============================================
# EVM Network Configuration
# ============================================
RPC_URL=https://rpc.cc3-testnet.creditcoin.network
CHAIN_ID=102031
PRIVATE_KEY=your_private_key_here

# ============================================
# Contract Addresses (after deployment)
# ============================================
HASH_CREDIT_MANAGER=
LENDING_VAULT=
VERIFIER=
CHECKPOINT_MANAGER=
BTC_SPV_VERIFIER=

# ============================================
# Stablecoin Configuration (Deploy scripts)
# ============================================
# Leave empty to deploy TestnetMintableERC20 automatically.
# Set to an existing ERC20 address to reuse external token.
STABLECOIN_ADDRESS=
# Initial vault bootstrap amount (6 decimals). Default: 1_000_000_000000
INITIAL_LIQUIDITY=1000000000000

# ============================================
# Bitcoin Configuration (for Relayer)
# ============================================
# Option A: Bitcoin Core RPC
BITCOIN_RPC_URL=http://localhost:8332
BITCOIN_RPC_USER=
BITCOIN_RPC_PASSWORD=

# Option B: Mempool/Esplora API (simpler for hackathon)
BITCOIN_API_URL=https://mempool.space/api

# ============================================
# Relayer Configuration
# ============================================
RELAYER_PRIVATE_KEY=your_relayer_signing_key_here
POLL_INTERVAL_SECONDS=60
CONFIRMATIONS_REQUIRED=6

# ============================================
# Database (for Relayer deduplication)
# ============================================
DATABASE_URL=sqlite:///./relayer.db

# ============================================
# SPV Live Demo Inputs (script/demo_live_spv.sh)
# ============================================
BORROWER_EVM=
BORROWER_BTC_ADDRESS=
BTC_TXID=
BTC_VOUT=0
# Optional: if empty, script auto-discovers from BTC_TXID
TARGET_HEIGHT=
# Optional: if empty, script auto-selects safely
CHECKPOINT_HEIGHT=
